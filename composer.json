{
    "name": "revolution/laravel-switchbot",
    "description": "SwitchBot API for Laravel",
    "keywords": [
        "laravel",
        "SwitchBot"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0||^12.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0||^10.0",
        "laravel/pint": "^1.22"
    },
    "autoload": {
        "psr-4": {
            "Revolution\\SwitchBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "kawax",
            "email": "kawaxbiz@gmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Revolution\\SwitchBot\\SwitchBotServiceProvider"
            ]
        }
    }
}
